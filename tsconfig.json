{
  "extends": "./tsconfig.common.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "incremental": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "##/*": ["interop/*"],
      "@/*": ["src/*"],
      "Èš/*": [".vitest/*"],
      "contentlayer/generated": [".contentlayer/generated"],
      "@rtm/generated/*": [".rtm-generated/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", ".contentlayer/generated", ".rtm-generated", "vitest.config.js"],
  "exclude": ["node_modules", "dist", "**/*.test-d.ts"]
}
